
<div class="container">

  <div class="contacts_header row">
    <div class="col-xs-12 text-center">
      Thank you, <%= @user.first_name.capitalize %>! Please check your email for instructions on how to claim your money.

    </div>
  </div>

<% if current_user %>

  <div class="contacts_header row">
    <div class="col-xs-12 text-center">
      Before you go, below are some of your contacts who may also have money waiting for them. <br> Select the contacts you would like to notify and click the button at the bottom to let them know.
    </div>
  </div>
<% end %>

<%= form_tag user_contacts_path(@user), :method => 'get' do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", :name => nil %>
<%end%>

<%= will_paginate @contacts %>
<%= form_tag user_sendemail_path, method: "POST" do %>
<%= render @contacts %>
  <div class="row">
    <div class="vcenter col-xs-12">
      <input class=" btn btn-default friends" type="submit" value="Email Selected Friends">
    </div>
  </div>
<% end %>



